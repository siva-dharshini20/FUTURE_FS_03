  function toggleLangMenu() {
    document.getElementById("langDropdown").classList.toggle("show");
  }

  function selectLang(lang) {
    const t = translations[lang];
    document.getElementById("langBtn").textContent =
      lang === 'en' ? 'üåê EN ‚ñº' :
      lang === 'hi' ? 'üåê HI ‚ñº' :
      'üåê TA ‚ñº';

    document.getElementById("headerText").textContent = t.header;
    document.querySelector(".label-order").textContent = t.order + ":";
    document.querySelector(".label-date").textContent = t.date + ":";
    document.querySelector(".label-amount").textContent = t.amount + ":";
    document.querySelector(".label-payment").textContent = t.payment + ":";
    document.querySelector(".label-status").textContent = t.status + ":";
    document.querySelector(".status").textContent = t.delivered;

    document.getElementById("langDropdown").classList.remove("show");
  }

  window.onclick = function(e) {
    if (!e.target.matches('#langBtn')) {
      document.getElementById("langDropdown").classList.remove("show");
    }
  }
  function updateLocation() {
    const newLocation = prompt("Enter your new delivery location:");
    if (newLocation && newLocation.trim() !== "") {
      document.getElementById("deliveryText").textContent = "Delivering to " + newLocation.trim();
    }
  }
</script>
